<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/imageCentral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo1"
            android:transitionName="imageapp1"/>

        <ImageView
            android:id="@+id/imageSecundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo2"
            android:transitionName="imageapp2"/>

        <TextView
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_below="@id/imageCentral"
            android:textColor="#3f4c16"
            android:layout_centerInParent="true"
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Refugis"
            android:transitionName="textapp1"/>

        <TextView
            android:id="@+id/textSubtitle"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:layout_below="@id/textTitle"
            android:textColor="#3f4c16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/outdoor"
            android:transitionName="textapp2"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>